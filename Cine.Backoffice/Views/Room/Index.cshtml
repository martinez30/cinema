@model IEnumerable<Application.Models.RoomModel>
@{
    ViewData["Title"] = "Salas";
}

<div class="content">
    <div class="container-fluid">
        <div class="col-md-10 ">
            <div class="card">
                <div class="card-header card-header-info">
                    <h4 class="card-title ">Salas</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-auto"></div>
                        <table class="table col-md-12">
                            <thead>
                            <th style="width:70%">
                                <h4 class="text-info">Nome</h4>
                            </th>
                            <th style="width:10%">
                                <h4 class="text-info">Poltronas</h4>
                            </th>
                            <th style="width:20%"></th>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model.OrderBy(x=>x.Name))
                                    {
                                        <tr>
                                            <td><h4>@item.Name</h4></td>
                                            <td><h4>@item.SeatsCount</h4></td>
                                            <td>
                                                <div class="row ">
                                                    <a class="nav-link col-md-3 " asp-action="Edit" asp-route-id="@item.Id " title="Editar">
                                                        <i class="material-icons">create</i>
                                                    </a>
                                                    <a class="nav-link col-md-3 " asp-action="Delete" asp-route-id="@item.Id " title="Remover">
                                                        <i class="material-icons">delete</i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2"> Nenhum dado encontrado </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Link
{
    <a asp-action="Register" asp-controller="Room" title="Cadastrar">
        <i class="material-icons">weekend</i>

    </a>
}
