@model Application.Models.OrderListModel
@{
    ViewData["Title"] = "Pedidos";
}
<style>
    select.form-control:not([size]):not([multiple]) {
        height: 2.3rem;
    }
</style>
<form asp-action="OrderList" id="form" method="get" autocomplete="off">
    <div class="row">

        <div class="form-group col-md-5">
            <input type="hidden" asp-for="IsSearch" value="true" />
            <label asp-for="@Model.OrderDate" class="control-label">Filme</label>
            <input type="date" asp-for="@Model.OrderDate" class="form-control" />
            <span asp-validation-for="@Model.OrderDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Status" class="control-label"> Status </label>
            <select asp-for="@Model.Status" class="form-control dark-edition" style="color: black" asp-items="ViewBag.StatusSelectList">
                <option value="">Selecione</option>
            </select>
            <span asp-validation-for="@Model.Status" class="text-danger"></span>
        </div>
        <div class="form-group col-md-1">
            <a class="btn btn-info" id="btn-search">
                <i class="material-icons ">search</i>
            </a>
        </div>
    </div>
</form>
@if (Model.Orders != null)
{
    <div class="content">
        <div class="container-fluid">
            <div class="col-md-10 ">
                <div class="card">
                    <div class="card-header card-header-info">
                        <h4 class="card-title ">Pedidos</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-auto"></div>
                            <table class="table col-md-12">
                                <thead>
                                <th style="width:15%">
                                    <h4 class="text-info">Numero do Pedido</h4>
                                </th>
                                <th style="width:20%">
                                    <h4 class="text-info">Data</h4>
                                </th>
                                <th style="width:20%">
                                    <h4 class="text-info">Status</h4>
                                </th>
                                <th style="width:25%">
                                    <h4 class="text-info">Quantidade de produtos</h4>
                                </th>
                                <th style="width:20%"></th>
                                </thead>
                                <tbody>
                                    @if (Model.Orders.Any())
                                    {
                                        @foreach (var item in Model.Orders)
                                        {
                                            <tr>
                                                <td><h4>@item.IdString</h4></td>
                                                <td><h4>@item.OrderDateString</h4></td>
                                                <td><h4>@item.StatusName</h4></td>
                                                <td><h4>@item.OrderItems.Count()</h4></td>
                                                <td>
                                                    @if (item.StatusName == "Em aberto")
                                                    {
                                                        <div class="row ">
                                                            <a class="nav-link col-md-3 " asp-action="Checkout" asp-route-id="@item.Id" title="Finalizar pedido">
                                                                <i class="material-icons">done</i>
                                                            </a>
                                                            <a class="nav-link col-md-3 " @*asp-action="Delete" asp-route-id="@item.Id "*@ href="#" title="Cancelamnto de pedido">
                                                                <i class="material-icons">delete</i>
                                                            </a>
                                                            <a class="nav-link col-md-3 " title="Tempo de expiração">
                                                                <i class="material-icons">watch_later</i>
                                                            </a>
                                                        </div>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="2"> Nenhum dado encontrado </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts
{
    <script type="text/javascript">

        $(function () {
            $("#btn-search").on("click", function () {
                $("#form").submit();
            })
        })
    </script>
}