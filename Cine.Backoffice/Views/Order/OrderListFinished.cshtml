@model Application.Models.OrderListModel

@{
    ViewData["Title"] = "Pedidos Finalizados";
}
<div>
    <form asp-action="OrderListFinished" id="form" method="get" autocomplete="off">
        <div class="row">
            <div class="form-group col-md-5">
                <input type="hidden" asp-for="IsSearch" value="true" />
                <label asp-for="OrderDate" class="control-label">Data</label>
                <input type="date" id="data" placeholder="mm/dd/yyyy" asp-for="OrderDate" class="form-control"/>
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-1">
                <a class="btn btn-info" id="btn-search">
                    <i class="material-icons ">filter_alt</i>
                </a>
            </div>
        </div>
    </form>
</div>
@if (Model.Orders != null)
{
    <div class="content">
        <div class="container-fluid">
            <div class="col-md-10 ">
                <div class="card">
                    <div class="card-header card-header-info">
                        <h4 class="card-title ">Pedidos</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-auto"></div>
                            <table class="table col-md-12">
                                <thead>
                                <th style="width:15%">
                                    <h4 class="text-info">Numero do Pedido</h4>
                                </th>
                                <th style="width:20%">
                                    <h4 class="text-info">Data</h4>
                                </th>
                                <th style="width:25%">
                                    <h4 class="text-info">Quantidade de produtos</h4>
                                </th>
                                <th style="width:20%"></th>
                                </thead>
                                <tbody>
                                    @if (Model.Orders.Any())
                                    {
                                        @foreach (var item in Model.Orders)
                                        {
                                            <tr>
                                                <td><h4>@item.IdString</h4></td>
                                                <td><h4>@item.OrderDateString</h4></td>
                                                <td><h4>@item.OrderItems.Count()</h4></td>
                                                <td>
                                                    <div class="row justify-content-end ">
                                                        <a class="nav-link col-md-3 " asp-action="Checkout" asp-route-id="@item.Id " title="Finalizar pedido">
                                                            <i class="material-icons">done</i>
                                                        </a>
                                                        <a class="nav-link col-md-3 " asp-action="Delete" asp-route-id="@item.Id " title="Cancelamnto de pedido">
                                                            <i class="material-icons">delete</i>
                                                        </a>
                                                        <div class="col-md-1"></div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4"> Nenhum dado encontrado </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts
{
    <script type="text/javascript">

        $(function () {
            $(".btn-info").on("click", function () {
                $("#form").submit();
            })
        })
    </script>
}