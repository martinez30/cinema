@model Application.Models.MovieModel
@{
    ViewData["Title"] = "Cadastro de filmes";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" autocomplete="off" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"> Título</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"> Duração </label>
                <input type="text" asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"> Categoria </label>
                <select asp-for="CategoryId" class="form-control dark-edition" asp-items="ViewBag.CategoryList">
                    <option value="">Selecione</option>    
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Classification" class="control-label"> Classificação </label>
                <select asp-for="Classification" class="form-control dark-edition" asp-items="ViewBag.ClassificationList">
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="Classification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Synopsis" class="control-label"> Sinopse </label>
                <textarea asp-for="Synopsis" class="form-control"> </textarea>
                <span asp-validation-for="Synopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>