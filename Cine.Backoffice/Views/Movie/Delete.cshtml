@model Application.Models.MovieModel
@{
    ViewData["Title"] = "Deletar filmes";
}

<div class="alert alert-warning">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <i class="material-icons">close</i>
    </button>
    <span>
        Deseja realmente deletar essa categoria?
    </span>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete" autocomplete="off" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <label asp-for="Name" class="control-label"> Título</label>
                <span class="form-control">@Model.Name</span>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"> Duração </label>
                <span class="form-control">@Model.Duration</span>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"> Categoria </label>
                <span class="form-control">@Model.CategoryName</span>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Classification" class="control-label"> Classificação </label>
                <span class="form-control">@Model.ClassificationName</span>
                <span asp-validation-for="Classification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Synopsis" class="control-label"> Sinopse </label>
                <span class="form-control">@Model.Synopsis</span>
                <span asp-validation-for="Synopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sim" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Nao</a>
            </div>
        </form>
    </div>
</div>