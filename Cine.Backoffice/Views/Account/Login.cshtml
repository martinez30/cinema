@model Cine.Backoffice.Models.AccountViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="container">
    <form autocomplete="off" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <h2>Login</h2>
        </div>
        <div class="row">
            <div class="col-md-2"> </div>
            <div class="col-md-4">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Email">E-mail</label>
                        <input class="form-control" type="text" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Password">Senha</label>
                        <input class="form-control" type="password" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-4">

                        </div>
                        <div class="form-group">
                            <input class="btn btn-info" type="submit" value="Entrar" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>