@model Application.Models.SessionModel
@{
    ViewData["Title"] = "Cadastro de Sessões";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" autocomplete="off" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label"> Filme</label>
                <select asp-for="MovieId" class="form-control dark-edition" asp-items="ViewBag.MovieSelectList">
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"> Qual a data e hora da sessão</label>
                <input type="datetime" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"> Sala </label>
                <select asp-for="RoomId" class="form-control dark-edition" asp-items="ViewBag.RoomSelectList">
                    <option value="">Selecione</option>
                </select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>