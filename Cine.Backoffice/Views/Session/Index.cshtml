@model IEnumerable<Application.Models.SessionModel>
@{
    ViewData["Title"] = "Sessões";
}

<div class="content">
    <div class="container-fluid">
        <div class="col-md-10 ">
            <div class="card">
                <div class="card-header card-header-info">
                    <h4 class="card-title ">Sessões</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-auto"></div>
                        <table class="table col-md-12">
                            <thead>
                            <th style="width:30%">
                                <h4 class="text-info">Filme</h4>
                            </th>
                            <th style="width:30%">
                                <h4 class="text-info">Horário da Sessão</h4>
                            </th>
                            <th style="width:30%">
                                <h4 class="text-info">Sala</h4>
                            </th>
                            <th style="width:20%"></th>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model.OrderByDescending(x => x.Date))
                                    {
                                        <tr>
                                            <td><h4>@item.MovieName</h4></td>
                                            <td><h4>@item.Date</h4></td>
                                            <td><h4>@item.RoomName</h4></td>
                                            <td>
                                                <div class="row ">
                                                    <a class="nav-link col-md-3 " asp-action="Edit" asp-route-id="@item.Id " title="Editar">
                                                        <i class="material-icons">create</i>
                                                    </a>
                                                    <a class="nav-link col-md-3 " asp-action="Delete" asp-route-id="@item.Id " title="Remover">
                                                        <i class="material-icons">delete</i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2"> Nenhum dado encontrado </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Link
{
    <a asp-action="Register" asp-controller="Session" title="Cadastrar">
        <i class="material-icons">add</i>

    </a>
}
